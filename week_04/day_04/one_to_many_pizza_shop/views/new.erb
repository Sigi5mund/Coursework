<form method="post" action="/pizzas">

  <div class="field-group">
    <label for="first-name-field" class="label">First Name:</label>
    <div class="field">
      <input
        type="text"
        name="first_name"
        id="first-name-field"
        placeholder="First name"
        required
      />
   </div>
  </div>

  <div class="field-group">
    <label for="last-name-field" class="label">Last Name:</label>
    <div class="field">
      <input
        type="text"
        name="last_name"
        id="last-name-field"
        placeholder="Last name"
        required
      />
    </div>
  </div>

 <div class="field-group">
   <label for="topping-selection" class='label'>Topping:</label>
   <div class="field">

     <select name="topping_id"> id="topping_selection">
      <% @toppings.each do |topping| %>
       <option value=<%= topping.id %>><%= topping.topping_type %></option>
      <% end %>
     </select>

   </div>
 </div>

  <div class="field-group">
    <label for="quantity-field" class="label">Quantity:</label>
    <div class="field">
      <input
        type="number"
        name="quantity"
        id="quantity-field"
      />
    </div>
  </div>

  <button class="big-button button">Order Pizza</button>
</form>
